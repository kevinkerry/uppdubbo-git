.box {
	position: absolute;
	display: none;
	width: 400px;
	left: 50%;
	height: 200px;
	z-index: 1001;
	background-color: #fff;
	border: 5px #aaa solid;
	padding: 0px;
}

.load_box {
	position: absolute;
	width: 300px;
	display: none;
	left: 50%;
	height: 200px;
	z-index: 1001;
	padding: 0px;
	text-align: center;
}

.box h2 {
	height: 35px;
	font-size: 15px;
	background-color: #4b5b78;
	position: relative;
	padding-left: 10px;
	line-height: 35px;
	color: #fff;
}

.box h2 a {
	position: absolute;
	right: 5px;
	font-size: 12px;
	color: #fff;
}

.box .list {
	padding: 10px;
	margin-left: 0px;
	font: bold 12px '微软雅黑';
}

.list h3 {
	margin-top: 20px;
}

.box .div_paysuccess {
	position: absolute;
	left: 80px;
	top: 90px;
	border: 1px #aaa solid;
	padding: 8px;
	background-color: #eee;
}

.box .div_payfailer {
	position: absolute;
	left: 230px;
	top: 90px;
	border: 1px #aaa solid;
	padding: 8px;
	background-color: #eee;
}

.box div a {
	font: 12px '微软雅黑';
	color: #666;
}

.showbtn {
	font: bold 24px '微软雅黑';
}

#boxhr {
	position: absolute;
	left: 20px;
	top: 150px;
	border: 1px #ddd solid;
	width: 360px;
}

#bg {
	background-color: #ddd;
	position: absolute;
	z-index: 1000;
	left: 0;
	top: 0;
	display: none;
	width: 100%;
	height: 100%;
	opacity: 0.5;
	filter: alpha(opacity = 50);
}

#load_bg {
	background-color: #ddd;
	position: absolute;
	z-index: 1000;
	left: 0;
	top: 0;
	display: none;
	width: 100%;
	height: 100%;
	opacity: 0.5;
	filter: alpha(opacity = 50);
}